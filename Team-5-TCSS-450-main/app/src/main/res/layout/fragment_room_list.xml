<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.roomlist.RoomListFragment">

    <Button
        android:id="@+id/add_chatroom"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:text="Add Chatroom"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_space"
        app:layout_constraintEnd_toEndOf="parent" />

    <Space
        android:id="@+id/bottom_nav_space"
        android:layout_width="356dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="788dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/roomCycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>